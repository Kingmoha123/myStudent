# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# MongoDB Connection String
# For local development: mongodb://localhost:27017/sms_db_s
# For production (MongoDB Atlas): mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/sms_db_s

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
# Generate a secure random string of at least 32 characters
# You can use: https://randomkeygen.com/
JWT_SECRET=your-super-secret-key-min-32-chars-long

# Server Port
# Local development: 5003 or any available port
# Render production: 10000 (required by Render)
PORT=5003

# Frontend URL (for CORS)
# Local development: http://localhost:3000
# Production: Your Vercel deployment URL (e.g., https://your-app.vercel.app)
FRONTEND_URL=http://localhost:3000
